<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <StackPane alignment="CENTER_LEFT" focusTraversable="true">
               <children>
                  <TextArea fx:id="question" prefRowCount="4" wrapText="true" />
               </children>
            </StackPane>
            <StackPane alignment="CENTER_LEFT" focusTraversable="true" prefWidth="200.0">
               <children>
                  <TextArea fx:id="answer" prefRowCount="4" wrapText="true" />
               </children>
            </StackPane>
         </children>
      </VBox>
   </left>
   <right>
      <ButtonBar BorderPane.alignment="CENTER">
         <buttons>
            <Button fx:id="delete" mnemonicParsing="false" text="Delete" />
         </buttons>
      </ButtonBar>
   </right>
   <bottom>
      <Separator prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <Separator prefWidth="200.0" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
