<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="350.0" minWidth="600.0" stylesheets="@style/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <ButtonBar buttonOrder="U+L_HE+FBIX_NCYOA_R" minHeight="40.0" BorderPane.alignment="CENTER">
         <buttons>
            <Button fx:id="goToCollections" mnemonicParsing="false" text="Go back to collections" />
            <Button fx:id="addFlashcard" mnemonicParsing="false" text="Add a new flashcard" />
         </buttons>
      </ButtonBar>
   </bottom>
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="flashcardsList" prefHeight="200.0" prefWidth="100.0" />
         </content>
      </ScrollPane>
   </center>
   <right>
      <Pane prefWidth="30.0" BorderPane.alignment="CENTER" />
   </right>
   <left>
      <Pane prefWidth="30.0" BorderPane.alignment="CENTER" />
   </left>
   <top>
      <VBox alignment="CENTER" minHeight="70.0">
         <children>
            <TextField fx:id="title" />
            <TextField fx:id="description" />
         </children>
      </VBox>
   </top>
</BorderPane>
