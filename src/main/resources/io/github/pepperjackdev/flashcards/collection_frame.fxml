<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="50.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <StackPane alignment="CENTER_LEFT">
               <children>
                  <Label fx:id="title" text="Collection's title">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
            <StackPane alignment="CENTER_LEFT" prefWidth="200.0">
               <children>
                  <Label fx:id="description" text="Collection's description" />
               </children>
            </StackPane>
            <StackPane alignment="CENTER_LEFT">
               <children>
                  <Label fx:id="lastModified" text="Last modified... today!" />
               </children>
            </StackPane>
         </children>
      </VBox>
   </left>
   <right>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <buttons>
            <Button fx:id="view" mnemonicParsing="false" text="View" />
            <Button fx:id="review" mnemonicParsing="false" text="Review" />
            <Button fx:id="delete" mnemonicParsing="false" text="Delete" />
         </buttons>
      </ButtonBar>
   </right>
   <bottom>
      <Separator prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <Separator prefWidth="200.0" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
