<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="350.0" minWidth="600.0" stylesheets="@style/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.pepperjackdev.flashcards.AddCollection">
   <bottom>
      <ButtonBar buttonOrder="U+L_HE+FBIX_NCYOA_R" minHeight="40.0" BorderPane.alignment="CENTER">
         <buttons>
            <Button fx:id="addCollection" mnemonicParsing="false" text="Add this new collection" />
            <Button fx:id="cancel" mnemonicParsing="false" text="Cancel" />
         </buttons></ButtonBar>
   </bottom>
   <top>
      <Pane prefHeight="30.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </top>
   <right>
      <Pane prefWidth="30.0" BorderPane.alignment="CENTER" />
   </right>
   <left>
      <Pane prefWidth="30.0" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <StackPane minHeight="40.0">
                     <children>
                        <Label text="Add a new collection: fill in all the required fields" />
                     </children>
                  </StackPane>
                  <StackPane minHeight="40.0">
                     <children>
                        <TextField fx:id="collectionTitle" maxWidth="400.0" promptText="The collection's title" />
                     </children>
                  </StackPane>
                  <StackPane minHeight="40.0">
                     <children>
                        <TextField fx:id="collectionDescription" maxWidth="400.0" promptText="The collection's description" />
                     </children>
                  </StackPane>
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane>
